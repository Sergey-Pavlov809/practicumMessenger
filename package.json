{
  "name": "messenger",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start": "vite && npm run build  && node ./server.js",
    "dev": "vite",
    "test": "mocha --require ts-node/register --require ./mochaSetup.cjs './src/**/*.test.ts'",
    "prebuild": "tsc --noEmit",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "stylelint": "stylelint \"**/*.less\" --fix",
    "lint:types": "tsc --noEmit",
    "lint:style": "stylelint \"**/*.less\"",
    "lint:js": "eslint src/ --ext .js,.ts, --fix",
    "lint": "run-p lint:*",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/chai": "4.3.3",
    "@types/jsdom": "20.0.0",
    "@types/mocha": "10.0.0",
    "@types/sinon": "10.0.13",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "chai": "4.3.6",
    "eslint": "^8.51.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-plugin": "0.0.12",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jsdom": "20.0.1",
    "less": "^4.2.0",
    "less-loader": "^11.1.3",
    "mocha": "10.0.0",
    "prettier": "^3.0.3",
    "sinon": "17.0.1",
    "stylelint": "^15.11.0",
    "stylelint-config-recommended-less": "^2.0.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-no-unsupported-browser-features": "^7.0.0",
    "stylelint-order": "^6.0.3",
    "ts-node": "10.9.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-style-import": "^2.0.0"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "express": "^4.18.2",
    "npm-run-all": "^4.1.5",
    "sinon": "^17.0.1",
    "stylelint-less": "^2.0.0",
    "uuid": "^9.0.1",
    "vite-plugin-checker": "^0.6.2",
    "vite-plugin-handlebars": "^1.6.0"
  }
}
